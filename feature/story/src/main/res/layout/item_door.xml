<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/door_nick_name_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="엔틱보스"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/door_nick_name_sub_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/door_nick_name_sub_view_text"
            app:layout_constraintTop_toTopOf="@id/door_nick_name_view"
            app:layout_constraintStart_toEndOf="@id/door_nick_name_view"
            app:layout_constraintBottom_toBottomOf="@id/door_nick_name_view"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/door_title_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/door_nick_name_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textColor="@color/black"
            android:text="2023년 03월 23일\n오늘도 부모님과의 추억을 기록해보는 것은 어떨까요?" />

        <View
            android:id="@+id/door_divider_view"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/gray_e9"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/door_title_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>