<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/write_story_nav_graph"
    app:startDestination="@id/writeStoryFragment">

    <fragment
        android:id="@+id/writeStoryFragment"
        android:name="com.antique.story.presentation.view.write.WriteStoryFragment"
        android:label="WriteStoryFragment" >
        <action
            android:id="@+id/action_writeStoryFragment_to_videoGalleryFragment"
            app:destination="@id/videoGalleryFragment" />
        <action
            android:id="@+id/action_writeStoryFragment_to_photoGalleryFragment"
            app:destination="@id/photoGalleryFragment" />
        <action
            android:id="@+id/action_writeStoryFragment_to_searchLocationFragment"
            app:destination="@id/searchLocationFragment" />
    </fragment>
    <fragment
        android:id="@+id/photoGalleryFragment"
        android:name="com.antique.story.presentation.view.photo.PhotoGalleryFragment"
        android:label="PhotoGalleryFragment" />
    <fragment
        android:id="@+id/videoGalleryFragment"
        android:name="com.antique.story.presentation.view.video.VideoGalleryFragment"
        android:label="VideoGalleryFragment" />
    <fragment
        android:id="@+id/searchLocationFragment"
        android:name="com.antique.story.presentation.view.location.SearchLocationFragment"
        android:label="SearchLocationFragment" />
</navigation>